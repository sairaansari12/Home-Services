<!-- AUI Framework -->
<!DOCTYPE html>
    <html>
   <%-include ('../partials/header')%>
    <body style="overflow: hidden;">
        

       

        <div id="page-wrapper" class="demo-example">

           

            <!-- #page-header -->

            <%-include ('../partials/side_bar')%>
            <!-- #page-sidebar -->
            <div id="page-content-wrapper">
                <div id="page-title">


    <div class="bg-gray text-transform-upr font-size-15 font-bold primary-font pad10A">Add Menu</div>

    

                </div>
                   <!-- #page-title -->
<div id="page-content">


<%-include ('../partials/flashMessage')%>



    <div class="large-box">
        <div class="pad10A">                                                                                                                                                                                                                                                                                               
            

                <!-- <form id="demo-form" action=""  method="" /> -->
                <form  role="form" onsubmit="return false"  class="col-md-12"  id="adduser" >
         <input type="hidden" name="categoryId" id="categoryId"/>

         <div class="form-row">
            <div class="form-label col-md-4">
                <label for="">
                    Main Category:
                    <span class="required">*</span>
                </label>
            </div>
            <div class="form-input col-md-8">
                <select data-placeholder="Choose Category" data-required="true"  onchange="getSubCat(this.value,'category')" class="chosen-select" name="parentcategory" id="parentcategory">
                    <option value="" /> 
                    <%for(var t=0;t<parData.length;t++){%>
                        <option  value="<%-parData[t].id%>" /><%-parData[t].name%> 
                       
                <%}%>
    
           </select>                        </div>
        </div>
         


                    <div class="form-row">
                        <div class="form-label col-md-4">
                            <label for="">
                                Category:
                                <span class="required">*</span>
                            </label>
                        </div>
                        <div class="form-input col-md-8">
                            <select data-placeholder="Choose Category" data-required="true"  onchange="getSubCat(this.value,'subcat1')" class="chosen-select" name="category" id="category">
                                <option value="" /> 

                             
                
                       </select>                        </div>
                    </div>


                <div class="form-row" id="subcatDiv" style="display:none">
                        <div class="form-label col-md-4">
                            <label for="">
                                Sub-Category Level1:
                            </label>
                        </div>
                        <div class="form-input col-md-8">
                            <select data-placeholder="Choose Sub-Category"   onchange="getSubCatLevel2(this.value,'subcat2','subcat2Div')"   name="subcat1"  class="chosen-select" id="subcat1">
                              
                            
                            </select>

                        </div>
                    </div>


                    <div class="form-row" id="subcat2Div" style="display:none">
                        <div class="form-label col-md-4">
                            <label for="">
                                Sub-Category Level 2:
                            </label>
                        </div>
                        <div class="form-input col-md-8">
                            <select data-placeholder="Choose Sub-Category"  onchange="getSubCatLevel2(this.value,'subcat3','subcat3Div')"    name="subcat2"  class="chosen-select" id="subcat2">
                              
                            
                            </select>

                        </div>
                    </div>


                    <div class="form-row" id="subcat3Div" style="display:none">
                        <div class="form-label col-md-4">
                            <label for="">
                                Sub-Category Level 3:
                            </label>
                        </div>
                        <div class="form-input col-md-8">
                            <select data-placeholder="Choose Sub-Category" name="subcat3"  class="chosen-select" id="subcat3">
                              
                            
                            </select>

                        </div>
                    </div>


                <div class="form-row">
                        <div class="form-label col-md-4">
                            <label for="">
                                Menu Name:
                                <span class="required">*</span>
                            </label>
                        </div>
                        <div class="form-input col-md-8">
                            <input type="text" id="serviceName"  data-rangelength="[2,100]" name="serviceName"  data-trigger="change" data-required="true" class="parsley-validated" />
                        </div>
                    </div>


                    <div class="form-row">
                        <div class="form-label col-md-4">
                            <label for="">
                                Type:  <span class="required">*</span>
                            </label>
                        </div>
                        <div class="form-input col-md-8">
                          
                            <select data-placeholder="Choose Type" data-required="true"  data-required="true" name="type" class="chosen-select" id="type">
                                <option value="" /> 
                                <option value="Fixed" />Fixed 
                                <option value="Hourly" />Hourly
                       </select>  
                          
                        </div>
                    </div>


                    <div class="form-row">
                        <div class="form-label col-md-4">
                            <label for="">
                                Icon:
                                <span class="required">*</span>
                            </label>
                        </div>
                        <div class="form-input col-md-8">
                            <input type="file" id="icon"   name="icon"  />
                        </div>         
                           
                                
                    </div>

                    <div class="form-row">
                        <div class="form-label col-md-4">
                            <label for="">
                                Thumbnail:
                            </label>
                        </div>
                        <div class="form-input col-md-8">
                            <input type="file"  id="thumbnail" name="thumbnail"  />
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-label col-md-4">
                            <label for="">
                                Duration:
                                <span class="required">*</span>
                            </label>
                        </div>
                        <div class="form-input col-md-8">
                            <input type="text" id="duration" name="duration"  data-trigger="change" data-required="true" class="parsley-validated" />
                        </div>
                    </div>


                    <div class="form-row">
                        <div class="form-label col-md-4">
                            <label for="">
                                Price:
                                <span class="required">*</span>
                            </label>
                        </div>
                        <div class="form-input col-md-8">
                            <input type="text" id="price" name="price" data-type="number" data-trigger="change" data-required="true" class="parsley-validated" />
                        </div>
                    </div>
                   

                    <div class="form-row">
                        <div class="form-label col-md-4">
                            <label for="">
                                Included Services:
                            </label>
                        </div>
                        <div class="form-input col-md-8">
                            <input type="text" id="includedServices" placeholder="Service1,Service2"   name="includedServices"  data-trigger="change" class="parsley-validated" />
                        </div>
                    </div>


                    <div class="form-row">
                        <div class="form-label col-md-4">
                            <label for="">
                                Excluded Services:
                            </label>
                        </div>
                        <div class="form-input col-md-8">
                            <input type="text" id="excludedServices" placeholder="Service1,Service2"   name="excludedServices"  data-trigger="change"  class="parsley-validated" />
                        </div>
                    </div>


                    <div class="form-row">
                        <div class="form-label col-md-4">
                            <label for="" class="label-description">
                                Description:
                                <span>100 chars min, 1000 max</span>
                            </label>
                        </div>
                        <div class="form-input col-md-8">
                            <textarea id="description" name="description"  data-required="true" data-trigger="keyup" data-rangelength="[100,1000]" class="parsley-validated"></textarea>
                        </div>
                    </div>


                    <div class="divider"></div>
                    <div class="form-row">
                        <input type="hidden" name="superhidden" id="superhidden" />
                        <div class="form-input col-md-8 col-md-offset-6">
                            <!-- //onclick="javascript:$(&apos;#demo-form&apos;).parsley( &apos;validate&apos; );" -->
                            <!-- onclick="javascript:$('#adduser').parsley('validate' );"  -->
                            <button  type="button" onclick="window.history.back();"   class="btn ui-state-default medium bg-red mrg15R">
                                <span class="button-content">Cancel</span>
                            </button>
                            <button  type="submit" class="btn ui-state-default medium  primary-bg">
                                <span class="button-content">Submit</span>
                            </button>
                            </div>
                    </div>

                </form>

        </div>

       
    </div>



                	</div><!-- #page-content -->
            </div><!-- #page-main -->
        </div><!-- #page-wrapper -->

    </body>
</html>


<script type="text/javascript">

     
    
      $('#adduser').submit( function() {
       
       
            var tempform = $('#adduser');
            tempform .parsley('validate' );


    if($('#subcatDiv').is(':visible')) 
{
    if($('#subcat1').val()=="")
    {
    showToastError('Please select subcategory Level 1 ')
                return false;
    }

            } 


if($('#subcat2Div').is(':visible')) 
{
    if($('#subcat2').val()=="")
    {
    showToastError('Please select subcategory Level 2')
                return false;
    }
    else $('#categoryId').val($('#subcat2').val())

            } 


if($('#subcat3Div').is(':visible')) 
{
    if($('#subcat3').val()=="")
    {
    showToastError('Please select subcategory Level 3')
                return false;
    }
    else $('#categoryId').val($('#subcat3').val())

 } 







            if(tempform.parsley('isValid' ))
            {

                var ext = $('#icon').val().split('.').pop().toLowerCase();
                var ext1 = $('#thumbnail').val().split('.').pop().toLowerCase();

                if($.inArray(ext, ['gif','png','jpg','jpeg']) == -1 || $.inArray(ext1, ['gif','png','jpg','jpeg']) == -1) {
               showToastError('Please select only jpg and png files for image!')
                return false;
            }


            var form_data = new FormData(tempform[0]);

            $('#loading1').show()

            $.ajax({
                type: 'POST',
                url: '<%-adminpath%>service/add',
                dataType: 'json',
                data: form_data,
                contentType:false,
                cache:false,
                processData:false,
                success: function (response) {
                    $('#loading1').hide()

                    $(".overlay").hide();
                    if (response.code == 200) {
                  
                        showToastSuccess(response.message)

                         window.location.href="<%-adminpath%>service";
                       
                    } else {
                        showToastError(response.message)
                    }
                },

                error: function(response)
                {
                    $('#loading1').hide()

                   var errorResponse=JSON.parse(response.responseText)
                   showToastError(errorResponse.message)


                }
            });
        }
      });
    
      function getSubCat(id,dataA)
{
    $('#subcatDiv').hide()
    $.ajax({
            type: 'POST',
            url: '<%-adminpath%>subcategory/getSubCat',
            dataType: 'json',
            data: {'category':id},
            success: function (response) {
                var dataAppend=null
                var data=response.body
                if (response.code == '200') {
                    $('#'+dataA).html("")
                    var dataAppend='<option value="">Nothing Selected</option>';
                  for(var k=0;k<data.length;k++)
                    {
                        dataAppend=dataAppend+'<option value="'+data[k].id+'" >'+data[k].name+'</option>';

                }
                $('#categoryId').val(id)
                $('#'+dataA).html(dataAppend)
                if(dataA=='subcat1' && data.length>0){
                    $('#subcatDiv').show()
                

                } 
              
          
                $('.chosen-select').trigger("chosen:updated");

                    }

                   
                
                
            },

            error :function(response)
            {
                showToastError(response.message)

            }
        });
    }




    function getSubCatLevel2(id,name,div)
{
    $.ajax({
            type: 'POST',
            url: '<%-adminpath%>subcategory/getSubCat',
            dataType: 'json',
            data: {'category':id},
            success: function (response) {
                var dataAppend=null
                var data=response.body
                if (response.code == '200') {
                    $('#'+name).html("")
                    $('#'+div).hide()

                    var dataAppend='<option value="">Nothing Selected</option>';

                  for(var k=0;k<data.length;k++)
                    {
                      dataAppend=dataAppend+'<option value="'+data[k].id+'" >'+data[k].name+'</option>';

                }
                $('#'+name).html(dataAppend)
                $('.chosen-select').trigger("chosen:updated");
               if(data.length>0) $('#'+div).show()

                    }

                   
                
                
            },

            error :function(response)
            {
                showToastError(response.message)

            }
        });
    }




  
    </script>

