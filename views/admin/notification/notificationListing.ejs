<!-- AUI Framework -->
<!DOCTYPE html>
    <html>
   <%-include ('../partials/header')%>
    <body style="overflow: hidden;">
        

       

        <div id="page-wrapper" class="demo-example">

           

            <!-- #page-header -->

            <%-include ('../partials/side_bar')%>
            <!-- #page-sidebar -->
            <div id="page-content-wrapper">
                <div id="page-title">

<h3>
    <div class="bg-gray text-transform-upr font-size-15 font-bold primary-font pad10A">Notification Listing</div>
    
</h3>
         

<div id="breadcrumb-right">
                        
    <div class="float-right">
       

        <div class="dropdown">
            <a onclick="return confirm('Are you sure you want to clear all notifications?');" href="<%-adminpath%>notification/clearAll" class="btn medium bg-red " title="Example dropdown" >
                <span class="button-content">
                    <i class="glyph-icon icon-archive float-left"></i>
                    Clear All 
                   
                </span>
            </a>
           
        </div>
    </div>
</div>
</div><!-- #page-title -->


<div id="page-content">


<%-include ('../partials/flashMessage')%>
<% 
if(data==undefined || data==null || data=='{}' || data.length==0) {%>

    <%-include ('../partials/norecord')%>


<%}else {%>
<div class="example-box">
    <div class="example-code">

        <ul class="notifications-box">

            <%for(var t=0;t<data.length;t++){%>
            <li>
                <span class="btn bg-grey icon-notification glyph-icon icon-list"></span>
                <span class="notification-text "><%-data[t].notificationDescription%></span>
              
                <div class="notification-time">
                    <%-commonMethods.formatAMPM(new Date(data[t].createdAt))%>           
                      <span class="glyph-icon icon-time"></span>

                      <a onclick="return confirm('Are you sure you want to delete this?');" 
                       href="<%-adminpath%>notification/delete/<%-data[t].id %>" class="font-red" title="">
                                                <i class="glyph-icon icon-archive mrg5R"></i>
                                                   
                                               </a>
                </div>
            </li>
            <%}%>
        </ul>

    </div>
    
</div>
<%}%>

                	</div><!-- #page-content -->
            </div><!-- #page-main -->
        </div><!-- #page-wrapper -->

    </body>
</html>




<script>


    function StatusChange(id,status)
    {

        
        $.ajax({
            type: 'POST',
            url: '<%-adminpath%>notification/status',
            dataType: 'json',
            data: {'id':id,'status':status},
            success: function (response) {
                if (response.code == '200') {
                   // $('#block_status_'+id).html('');

                }
                else{
                   
                    showToastError(response.message)
                }
            },

            error :function(response)
            {
                showToastError(response.message)

            }
        });
    
    }
   
 
    

</script>
