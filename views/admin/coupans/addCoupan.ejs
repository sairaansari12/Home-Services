<!-- AUI Framework -->
<!DOCTYPE html>
    <html>
   <%-include ('../partials/header')%>
    <body style="overflow: hidden;">
        

       

        <div id="page-wrapper" class="demo-example">

           

            <!-- #page-header -->

            <%-include ('../partials/side_bar')%>
            <!-- #page-sidebar -->
            <div id="page-content-wrapper">
                <div id="page-title">


    <div class="bg-gray text-transform-upr font-size-15 font-bold primary-font pad10A">Add Coupan</div>

    

                </div>
                   <!-- #page-title -->
<div id="page-content">


<%-include ('../partials/flashMessage')%>



    <div class="large-box">
        <div class="pad10A">
            

                <!-- <form id="demo-form" action=""  method="" /> -->
                <form  role="form" onsubmit="return false"  class="col-md-12"  id="adduser" >
                    <input type="hidden"  name="parentId" id="parentId"   />

                <div class="form-row">
                        <div class="form-label col-md-4">
                            <label for="">
                                 Name:
                                <span class="required">*</span>
                            </label>
                        </div>
                        <div class="form-input col-md-8">
                            <input type="text" id="name"  data-rangelength="[2,100]" name="name"  data-trigger="change" data-required="true" class="parsley-validated" />
                        </div>
                    </div>


                    <div class="form-row">
                        <div class="form-label col-md-4">
                            <label for="">
                                 Code:
                                <span class="required">*</span>
                            </label>
                        </div>
                        <div class="form-input col-md-8">
                            <input type="text" id="code"  data-rangelength="[2,100]" name="code"  data-trigger="change" data-required="true" class="parsley-validated" />
                        </div>
                    </div>

                 



                   


                    
                    <div class="form-row">
                        <div class="form-label col-md-4">
                            <label for="">
                                 Discount (%):
                                <span class="required">*</span>
                            </label>
                        </div>
                        <div class="form-input col-md-8">
                            <input  id="code"  data-type="number"  data-rangelength="[1,3]" name="discount"  data-trigger="change" data-required="true" class="parsley-validated" />
                        </div>
                    </div>


                    <div class="form-row">
                        <div class="form-label col-md-4">
                            <label for="">
                                Choose Category :
                                <span class="required">*</span>
                            </label>
                        </div>
                        <div class="form-input col-md-8">
                            <select   data-placeholder="Choose Category"  class="chosen-select" name="categoryId" id="categoryId">
                                <option value="" > All Categories</option>
                                <%for(var t=0;t<catData.length;t++){%>
                                <option value="<%-catData[t].id%>" /><%-catData[t].name%> 
                               
                        <%}%>
                       </select>                        </div>
                    </div>

                    

                    <div class="form-row">
                        <div class="form-label col-md-4">
                            <label for="">
                                Type:  <span class="required">*</span>
                            
                            </label>
                        </div>
                        <div class="form-input col-md-8">
                            <select data-placeholder="Choose Type" class="chosen-select"  data-required="true" id="type" name="type">
                               
                                <option value="0" />All 
                                <%for(var p=0;p<types.length;p++){%>
                                   
                                    <option   value="<%-types[p].id%>" ><%-types[p].userType%></option> 
  
                                   
                                   <%}%>
                
                
                       </select>                        </div>
                    </div>


                    <div class="form-row">
                        <div class="form-label col-md-4">
                            <label for="">
                                Usage Limit :
                                <span class="required">*</span>
                            </label>
                        </div>
                        <div class="form-input col-md-8">
                            <input  id="usageLimit"  data-type="number"  data-rangelength="[1,3]" name="usageLimit"  data-trigger="change" data-required="true" class="parsley-validated" />
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-label col-md-4">
                            <label for="">
                                Minimum Order Amount :
                                <span class="required">*</span>
                            </label>
                        </div>
                        <div class="form-input col-md-8">
                            <input  id="minimumAmount"  data-type="number"  data-rangelength="[1,6]" name="minimumAmount"  data-trigger="change" data-required="true" class="parsley-validated" />
                        </div>
                    </div>





                    <div class="form-row">
                        <div class="form-label col-md-4">
                            <label for="">
                                Icon:
                                <span class="required">*</span>
                            </label>
                        </div>
                        <div class="form-input col-md-8">
                            <input type="file" id="icon"   name="icon"  />
                        </div>         
                           
                                
                    </div>

                    <div class="form-row">
                        <div class="form-label col-md-4">
                            <label for="">
                                Thumbnail:
                            </label>
                        </div>
                        <div class="form-input col-md-8">
                            <input type="file"  id="thumbnail" name="thumbnail"  />
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-label col-md-4">
                            <label for="">
                                Valid Upto:
                                <span class="required">*</span>
                            </label>
                        </div>
                        <div class="form-input col-md-8">
                           
                            <input type="text" class="datepicker" data-required="true"  id="validupto" name="validupto" />
                        </div>
                    </div>


                    <div class="form-row">
                        <div class="form-label col-md-4">
                            <label for="" class="label-description">
                                Description:
                                <span>10 chars min, 1000 max</span>
                            </label>
                        </div>
                        <div class="form-input col-md-8">
                            <textarea id="description" name="description" data-trigger="keyup" data-rangelength="[10,1000]" class="parsley-validated"></textarea>
                        </div>
                    </div>


                    <div class="divider"></div>
                    <div class="form-row">
                        <input type="hidden" name="superhidden" id="superhidden" />
                        <div class="form-input col-md-8 col-md-offset-6">
                            <!-- //onclick="javascript:$(&apos;#demo-form&apos;).parsley( &apos;validate&apos; );" -->
                            <!-- onclick="javascript:$('#adduser').parsley('validate' );"  -->
                            <button  type="button" onclick="window.history.back();"   class="btn ui-state-default medium bg-red mrg15R">
                                <span class="button-content">Cancel</span>
                            </button>
                            <button  type="submit" class="btn ui-state-default medium  primary-bg">
                                <span class="button-content">Submit</span>
                            </button>
                            </div>
                    </div>

                </form>

        </div>

       
    </div>



                	</div><!-- #page-content -->
            </div><!-- #page-main -->
        </div><!-- #page-wrapper -->

    </body>
</html>


<script type="text/javascript">

$( "#validupto" ).datepicker({ minDate: 0});

      $('#adduser').submit( function() {
       
       
            var tempform = $('#adduser');
           
            tempform .parsley('validate' );

            if(tempform.parsley('isValid' ))
            {

                var ext = $('#icon').val().split('.').pop().toLowerCase();
                var ext1 = $('#thumbnail').val().split('.').pop().toLowerCase();

                if($.inArray(ext, ['gif','png','jpg','jpeg']) == -1 ) {
               showToastError('Please select only jpg and png files for image!')
                return false;
            }


            var form_data = new FormData(tempform[0]);
            $(".overlay").show();
            $.ajax({
                type: 'POST',
                url: '<%-adminpath%>coupans/add',
                dataType: 'json',
                data: form_data,
                contentType:false,
                cache:false,
                processData:false,
                success: function (response) {
                    $(".overlay").hide();
                    if (response.code == 200) {
                  
                        showToastSuccess(response.message)

                         window.location.href="<%-adminpath%>coupans/";
                       
                    } else {
                        showToastError(response.message)
                    }
                },

                error: function(response)
                {
                   var errorResponse=JSON.parse(response.responseText)
                   showToastError(errorResponse.message)


                }
            });
        }
      });
    
  
    </script>


