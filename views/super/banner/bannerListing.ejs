<!-- AUI Framework -->
<!DOCTYPE html>
    <html>
   <%-include ('../partials/header')%>
    <body style="overflow: hidden;">
        

       

        <div id="page-wrapper" class="demo-example">

           

            <!-- #page-header -->

            <%-include ('../partials/side_bar')%>
            <!-- #page-sidebar -->
            <div id="page-content-wrapper">
                <div id="page-title">

<h3>
    <div class="bg-gray text-transform-upr font-size-15 font-bold primary-font pad10A">Banners Listing</div>
    
</h3>
         

<div id="breadcrumb-right">
                        
    <div class="float-right">
       

        <div class="dropdown">
            <a href="<%-superadminpath%>banner/add" class="btn medium primary-bg " title="Example dropdown" >
                <span class="button-content">
                    <i class="glyph-icon icon-plus float-left"></i>
                    Add New 
                   
                </span>
            </a>
           
        </div>
    </div>
</div>
</div><!-- #page-title -->
<div id="page-content">
    <div class="form-row col-lg-3 float-left form-vertical font-size-12 bold  float-left dropdown form-label  ">
        <select   data-placeholder="Choose Company"  onchange="getSubCat(this.value)"  class="chosen-select" id="compId">
            <option value="<%-locals.userId%>" > My Banners</option>
            <%for(var t=0;t<compData.length;t++){%>
            <option value="<%-compData[t].id%>" /><%-compData[t].companyName%> 
           
    <%}%>
   </select>

     </div>

<%-include ('../partials/flashMessage')%>

<table class="table" id="example1">
	<thead>
		<tr>
            <th>Name</th>
            <th>Banner</th>
            <th>Created At</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>

		<%for(var t=0;t<data.length;t++) {
            
            %>
		<tr>
            <td><%-data[t].name%> </td>
			<td><img height="150" width="250" src="<%-data[t].url %>"/>  </td>
			<td><%-commonMethods.format(new Date(data[t].createdAt)) %> </td>


            
            <td>
            
             <a href="javascript:;"   <%if(data[t].status==0){%> style="display:none" <%}%>  id="block_status_<%-data[t].id%>"   onclick="StatusChange('<%= data[t].id %>','1')"  class="btn small  bg-green  ">
                <span class="button-content">
                    <i class="glyph-icon icon-cog float-left"></i>
                   Active &nbsp;&nbsp;&nbsp;
                </span>
            </a>


         
            
            <a href="javascript:;"   <%if(data[t].status==1){%> style="display:none" <%}%>  id="unblock_status_<%-data[t].id%>"   onclick="StatusChange('<%= data[t].id %>','0')"  class="btn small  bg-red  ">
                <span class="button-content">
                    <i class="glyph-icon icon-ban-circle float-left"></i>
                   Inactive 
                </span>
            </a>


            <div class="dropdown">
                <a href="javascript:;" title="" class="btn small bg-blue" data-toggle="dropdown">
                    <span class="button-content">
                        <i class="glyph-icon font-size-11 icon-cog"></i>
                        <i class="glyph-icon font-size-11 icon-chevron-down"></i>
                    </span>
                </a>
                <ul class="dropdown-menu float-right">

                    <li>
                        <a href="<%-superadminpath%>banner/view/<%= data[t].id %>" title="">
                            <i class="glyph-icon icon-edit mrg5R"></i>
                            Edit
                        </a>
                    </li>
                   
                   
                    <li class="divider"></li>
                    <li>
                        <a onclick="return confirm('Are you sure you want to delete this?');"  href="<%-superadminpath%>banner/delete/<%= data[t].id %>"  class="font-red" title="">
                            <i class="glyph-icon icon-remove mrg5R"></i>
                            Delete
                        </a>
                    </li>
                </ul>
            </div>


            </td>		
        </tr>
		<%}%>
		
	</tbody>
	
</table>


                	</div><!-- #page-content -->
            </div><!-- #page-main -->
        </div><!-- #page-wrapper -->

    </body>
</html>




<script>


function getSubCat(id,type)
    {
      var comp=$('#compId').val();
   window.location.href="<%-superadminpath%>/banner?compId="+comp
    }
 

    function StatusChange(id,status)
    {

        var confirm1= (status=="1") ? "Inactive" : "Active"
        if( confirm('Are you sure you want to '+confirm1+' this?'))
        {
        $.ajax({
            type: 'POST',
            url: '<%-superadminpath%>banner/status',
            dataType: 'json',
            data: {'id':id,'status':status},
            success: function (response) {
                if (response.code == '200') {
                   // $('#block_status_'+id).html('');

                    if(status == "1")
                    {
                       $('#block_status_'+id).hide()
                       $('#unblock_status_'+id).show()
                       showToastSuccess( "Banner inactive successfully")


                    }else{
                         
                         $('#block_status_'+id).show()
                        $('#unblock_status_'+id).hide()
                       // $('#block_status_'+id).append("<i  class='fa fa-truck'  aria-hidden='true'></i>")
                       showToastSuccess( "banner active successfully")

                    }
                    
                }
                else{
                   
                    showToastError(response.message)
                }
            },

            error :function(response)
            {
                showToastError(response.message)

            }
        });
    }
    }
   
    $('#compId').val(getURLParameter('compId'))

    

</script>
